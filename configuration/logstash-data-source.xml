<configuration supports_final="true">
  <property>
    <name>source.type</name>
    <value>fs</value>
    <description>Souce type can be either "fs" or "hdfs".
    </description>
  </property>
  <property>
    <name>elastic.index</name>
    <value>mapred.job</value>
    <description>Logstash uses this index in Elasticsearch 
    to store collecter data.
    </description>
  </property>
  <property>
    <name>source.file</name>
    <value>/var/log/ambari-agent/ambari-agent.log</value>
    <description>Logstash collects data from this file path.
    </description>
  </property>
</configuration>