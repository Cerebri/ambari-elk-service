<configuration supports_final="true">
  <property>
    <name>cluster.name</name>
    <value>mycluster</value>
    <description>Use a descriptive name for your cluster</description>
  </property>
  <property>
    <name>path.data</name>
    <value>/var/lib/elasticsearch/data</value>
    <description>Path to directory where to store the data
    </description>
    <value-attributes>
      <type>directory</type>
    </value-attributes>
  </property>
  <property>
    <name>path.logs</name>
    <value>/var/log/elasticsearch</value>
    <description>Path to log files</description>
    <value-attributes>
      <type>directory</type>
    </value-attributes>
  </property>
  <property>
    <name>http.port</name>
    <value>9200</value>
    <description>Set a custom port for HTTP</description>
    <value-attributes>
      <type>int</type>
    </value-attributes>
  </property>
</configuration>